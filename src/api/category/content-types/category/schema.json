{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": "Organize your content into categories"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "category"
    },
    "metaTitle": {
      "type": "string",
      "minLength": 30,
      "maxLength": 60,
      "required": true
    },
    "metaDescription": {
      "type": "string",
      "minLength": 70,
      "maxLength": 160,
      "required": true
    },
    "metaKeywords": {
      "type": "string",
      "required": true
    },
    "ogTitle": {
      "type": "string",
      "minLength": 30,
      "maxLength": 60
    },
    "ogDescription": {
      "type": "string",
      "minLength": 90,
      "maxLength": 200,
      "required": true
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    }
  }
}
